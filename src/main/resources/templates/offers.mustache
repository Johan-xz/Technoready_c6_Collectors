{{>_header}}
<div class="container">
    <h1>Auctions</h1>
    
    <div class="form-actions" style="margin-bottom: 2rem;">
        <a href="/tienda" class="btn btn-secondary">â† Back to Store</a>
        <a href="/offers/new" class="btn btn-success">Create New Offer</a>
    </div>

    {{#message}}
    <div class="alert alert-success">
        {{message}}
    </div>
    {{/message}}

    <h2>Active Bids</h2>
    
    {{#offers}}
    <div class="offer-list">
        {{#offers}}
        <div class="offer-card">
            <h3>Current Highest Bid</h3>
            <div class="offer-discount">${{currentBid}}</div>
            <p>
                <strong>Item ID:</strong>
                <span class="offer-item-id">{{itemId}}</span>
            </p>
            <p class="offer-valid-until">
                Bidder: <strong>{{bidder}}</strong>
            </p>
        </div>
        {{/offers}}
    </div>
    {{/offers}}
    
    {{^offers}}
    <div class="empty-state">
        <div class="empty-state-icon">ğŸ“¦</div>
        <p>No special offers at this time.</p>
        <p style="margin-top: 1rem;">
            <a href="/offers/new" class="btn btn-success" style="margin-top: 1rem;">
                Create First Offer
            </a>
        </p>
    </div>
    {{/offers}}
</div>
{{>_footer}}
